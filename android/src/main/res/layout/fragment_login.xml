<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kotlinaout_login_title"
        app:layout_constraintBottom_toTopOf="@id/loginLegend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginLegend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kotlinaout_login_legend"
        app:layout_constraintBottom_toTopOf="@id/loginNewAdventure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginTitle" />

    <Button
        android:id="@+id/loginNewAdventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kotlinaout_login_new_adventure"
        app:layout_constraintBottom_toTopOf="@id/loginResumeAdventure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginLegend" />

    <Button
        android:id="@+id/loginResumeAdventure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kotlinaout_login_resume_adventure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginNewAdventure" />


</androidx.constraintlayout.widget.ConstraintLayout>